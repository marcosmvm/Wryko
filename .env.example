# ===========================================
# XGrowthOS Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ===========================================

# App Configuration
# ------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# n8n Cloud Configuration
# ------------------------------------------
# Your n8n cloud instance URL
N8N_CLOUD_URL=https://your-instance.app.n8n.cloud
# Webhook base URL for calling workflows
N8N_WEBHOOK_URL=https://your-instance.app.n8n.cloud/webhook
# API key for n8n REST API
N8N_API_KEY=your_n8n_api_key_here

# Supabase Configuration
# ------------------------------------------
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Supabase anon/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
# Supabase service role key (server-side only - KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Stripe Configuration
# ------------------------------------------
# Stripe secret key (server-side only)
STRIPE_SECRET_KEY=sk_live_xxx
# Stripe publishable key (safe for browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx
# Stripe webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Apollo.io Configuration
# ------------------------------------------
APOLLO_API_KEY=your_apollo_api_key_here

# Instantly.ai Configuration
# ------------------------------------------
INSTANTLY_API_KEY=your_instantly_api_key_here

# Google Cloud Configuration
# ------------------------------------------
GOOGLE_CLOUD_API_KEY=your_google_cloud_key_here
GOOGLE_DRIVE_CLIENT_ID=your_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_client_secret_here

# Analytics & Tracking (Optional)
# ------------------------------------------
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Feature Flags (Optional)
# ------------------------------------------
ENABLE_ADMIN_PORTAL=true
ENABLE_CLIENT_PORTAL=true
ENABLE_ANALYTICS=true
